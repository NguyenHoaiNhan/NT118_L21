<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/tv_restaurant_name"
        android:textSize="30sp"
        android:text="Quán cơm gà Thảo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:id="@+id/btn_order"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Gọi đặt cơm"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#71CF03"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="10">
            <TextView
                android:id="@+id/tv_res_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="SDT: 0934129648"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:textStyle="italic"
                android:textSize="14sp"
                android:text="Phục vụ: 8h - 19h"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>